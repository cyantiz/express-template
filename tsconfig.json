{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2018", "es2019"],
    "module": "commonjs",
    "target": "es2018",
    "typeRoots": ["node_modules/@types", "src/types/**"],
    "outDir": "sf_backend/dist",
    "plugins": [
      {
        "transform": "ts-nameof",
        "type": "raw"
      }
    ]
  },
  "include": ["./src/**/*", "sf_backend/jest.config.js"],
  "exclude": ["node_modules"]
}
